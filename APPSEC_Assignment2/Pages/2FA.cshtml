@page
@model APPSEC_Assignment2.Pages._2FAModel

<h2>Two-Factor Authentication</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="TwoFactorAuthViewModel.Code"></label>
        <input asp-for="TwoFactorAuthViewModel.Code" class="form-control" />
        <span asp-validation-for="TwoFactorAuthViewModel.Code" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="TwoFactorAuthViewModel.UserId" />

    <button type="submit" class="btn btn-primary">Verify</button>
</form>
