@page
@model APPSEC_Assignment2.Pages._2FAModel

<h2>Two-Factor Authentication</h2>

<form method="post" asp-antiforgery="true">

    <div class="form-group" >
        <label asp-for="verificationField"></label>
        <input type="number" asp-for="verificationField" class="form-control" />
        <span asp-validation-for="verificationField" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Verify</button>
</form>
